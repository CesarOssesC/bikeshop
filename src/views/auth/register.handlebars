<div class="container my-5">
    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    <h2 class="mb-5 text-center">Crear Cuenta</h2>
    <form action="/auth/register" method="POST">
        <div class="mb-3">
            <label class="form-label" for="nombre">Nombre</label>
            <input class="form-control" type="text" name="nombre" id="nombre" value="{{nombre}}" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" name="email" id="email" value="{{email}}" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" name="password" id="password" value="{{password}}" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Registrarme</button>
    </form>
    <div class="my-5 text-center">
        Ya tienes cuenta? <a href="/auth/login">Inicia Sesi√≥n</a>
    </div>
</div>