<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Compras</h1>
        <a href="/compras/new" class="btn btn-primary">+ Generar Compra</a>
    </div>
    {{#if compras.length}}
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Total</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each compras}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.total}}</td>
                        <td>{{this.createdAt}}</td>
                        <td>
                            <a href="/compras/{{this.id}}" class="btn btn-primary btn-sm">Detalles</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div class="alert alert-info text-center">
            No hay compras registradas a√∫n
        </div>
    {{/if}}
</div>