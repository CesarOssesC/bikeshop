<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Detalle compra #{{compra.id}}</h1>
        <a href="/compras" class="btn btn-primary">Volver</a>
    </div>

    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Tipo</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            {{#each compra.bicicleta}}
                <tr>
                    <td>{{this.marca}}</td>
                    <td>{{this.modelo}}</td>
                    <td>{{this.tipo}}</td>
                    <td>{{this.precio}}</td>
                    <td>{{this.compra_bicicleta.cantidad}}</td>
                    <td>{{this.compra_bicicleta.subtotal}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="d-flex justify-content-end mt-3 mb-5">
        <h3>Total: ${{compra.total}}</h3>
    </div>
    <div class="text-end">
        <small class="text-body-secondary">Fecha: {{compra.createdAt}}</small>
    </div>
</div>